@model SalesWebMvc.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="font-weight-bold text-danger">@ViewData["Title"]</h1>
    <h3 class="text-danger display-4 font-weight-bold">Are you sure you want to delete this?</h3>

    <div class="row">
        <div class="col-md-6">
            <h4><span style="font-weight: bold; color: black;">Department</span></h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-primary ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
