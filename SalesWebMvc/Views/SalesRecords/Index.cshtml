@{
    ViewData["Title"] = "Sales Records";
}

<h1><span style="font-weight: bold;">@ViewData["Title"]</span></h1>
<p>
    <a asp-action="Create" class="btn btn btn-primary">Create New</a>
</p>
<hr />

<div class="col-md-6">
    <form class="form-horizontal" asp-action="SimpleSearch">
        <fieldset>
            <legend class="font-weight-bold">Simple Search</legend>
            <div class="form-group">
                <div class="col-lg-10 text-center">
                    <label for="minDate" class="control-label">Min Date</label>
                    <input type="date" name="MinDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 text-center">
                    <label for="maxDate" class="control-label">Max Date</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<div class="col-md-6">
    <form class="form-horizontal" asp-action="GroupingSearch">
        <fieldset>
            <legend class="font-weight-bold text-right">Grouping Search</legend>
            <div class="form-group">
                <div class="col-lg-12 text-center">
                    <label for="minDate" class="control-label">Min Date</label>
                    <input type="date" name="MinDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 text-center">
                    <label for="maxDate" class="control-label">Max Date</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
