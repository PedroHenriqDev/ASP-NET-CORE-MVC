@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <h3 class="text-danger display-4">Are you sure you want to delete this?</h3>

    <div>
        <h4>Seller</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-9">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-9">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-9">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BirthDate)
            </dd>
            <dt class="col-sm-9">
                @Html.DisplayNameFor(model => model.BaseSalary)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BaseSalary)
            </dd>
        </dl>

        <form asp-action="Delete" class="form-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary ml-2">Back to list</a>
        </form>
    </div>
</div>
