@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1><span style="font-weight: bold;">@ViewData["Title"]</span></h1>
<p>
    <a asp-action="Create" class="btn btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                <strong>@Html.DisplayNameFor(model => model.Name)</strong>
            </th>
            <th>
                <strong>@Html.DisplayNameFor(model => model.Email)</strong>
            </th>
            <th>
                <strong>@Html.DisplayNameFor(model => model.BirthDate)</strong>
            </th>
            <th>
                <strong>@Html.DisplayNameFor(model => model.BaseSalary)</strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                </td>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.Email)</strong>
                </td>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.BirthDate)</strong>
                </td>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.BaseSalary)</strong>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
